Methodes_set_LC CSS_Meta_IHM [L_methodes_set_CSS_Meta_IHM] {$this(FC)} {$this(L_LM)}
Methodes_get_LC CSS_Meta_IHM [L_methodes_get_CSS_Meta_IHM] {$this(FC)}

