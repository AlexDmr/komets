inherit CSS_Meta_IHM Logical_consistency

#___________________________________________________________________________________________________________________________________________
method CSS_Meta_IHM constructor {name descr args} {
 this inherited $name $descr
   this set_GDD_id CT_CSS_Meta_IHM
 set CFC "${objName}_CFC"; CSS_Meta_IHM_CFC $CFC
   this set_Common_FC $CFC

 set this(LM_LP) "${objName}_LM_LP";
   CSS_Meta_IHM_LM_P  $this(LM_LP) $this(LM_LP) "The logical presentation of $name"
   this Add_LM $this(LM_LP);

 eval "$objName configure $args"
 return $objName
}

