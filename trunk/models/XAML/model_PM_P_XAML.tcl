inherit PM_PM_XAML Physical_model

#___________________________________________________________________________________________________________________________________________
method PM_PM_XAML constructor {name descr args} {
 this inherited $name $descr
 set this(root)              {}
 set ptf [$this(cou) get_ptf]
 $ptf set_soft_type XAML
 this set_cmd_placement {}
 
 eval "$objName configure $args"
}
#___________________________________________________________________________________________________________________________________________
method PM_PM_XAML dispose {} {foreach PMM $this(L_mothers) {this Sub_prim_mother $PMM [$PMM get_prim_handle]}
                              this inherited
                             }

#___________________________________________________________________________________________________________________________________________
#___________________________________________________________________________________________________________________________________________
#___________________________________________________________________________________________________________________________________________
method PM_PM_XAML Render {txt_name {dec {}}} {
 upvar $txt_name txt
 foreach d [this get_daughters] {
   $d Render txt "$dec  "
  }
}

