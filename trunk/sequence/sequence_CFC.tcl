#___________________________________________________________________________________________________________________________________________
inherit CommonFC_sequence CommonFC

#___________________________________________________________________________________________________________________________________________
#___________________________________________________________________________________________________________________________________________
#___________________________________________________________________________________________________________________________________________
method CommonFC_sequence constructor {} {
 set this(step) 0
}

#___________________________________________________________________________________________________________________________________________
Generate_accessors CommonFC_sequence [list step]

#___________________________________________________________________________________________________________________________________________
method CommonFC_sequence Next     {} {incr this(step);    return $this(step)}
method CommonFC_sequence Previous {} {incr this(step) -1; return $this(step)}

#___________________________________________________________________________________________________________________________________________
proc L_methodes_get_sequence {} {return [list {get_step {}} ]}
proc L_methodes_set_sequence {} {return [list {Next {}} {Previous {}} ]}
