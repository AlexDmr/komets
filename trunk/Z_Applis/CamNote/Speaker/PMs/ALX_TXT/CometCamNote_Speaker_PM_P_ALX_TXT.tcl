method CometCamNote_Speaker_PM_P_ALX_TXT Analyse {str_name} {
 upvar $str_name  str
 set LC [this get_LC]
 this set_reg_exp "regexp \" *(in)? *(${objName}|[this get_name]|[$LC get_name]) *(.*)\$\" \$str reco in obj apres"

 this inherited str
}
