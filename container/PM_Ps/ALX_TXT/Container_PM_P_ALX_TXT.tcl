inherit Container_PM_P_ALX_TXT PM_ALX_TXT

#___________________________________________________________________________________________________________________________________________
method Container_PM_P_ALX_TXT constructor {name descr args} {
 this inherited $name $descr
   this set_GDD_id Container_CUI_text_ALX_TXT
 this set_name $name
 set class(mark) 0

 eval "$objName configure $args"
 return $objName
}

#___________________________________________________________________________________________________________________________________________
method Container_PM_P_ALX_TXT Analyse {str_name} {
 upvar $str_name  str
 set LC [this get_LC]
 set cmd {(login|pass)}
 set num {\[0-9\]*}
 this set_reg_exp "regexp -nocase \" *(in)? *(${objName}|[this get_name]|[$LC get_name]) *(.*)\$\" \$str reco in obj apres"

 this inherited str
}

