proc Create_set_cometText {prefixe L_infos} {
 set rep [list]
 foreach i $L_infos {
   if {[expr [llength $i] == 1]} {set name [lindex $i 0]; set txt $name} else {set name [lindex $i 0]; set txt [lindex $i 1]}
   set n "$prefixe$name"
   CometText $n $n {} $txt
   lappend rep $n
  }
 return $rep
}

#___________________________________________________________________________________________________________________________________________
proc Create_set_PM_Text {type suffixe L_Comets} {
 set rep [list]
 foreach i $L_Comets {
   set LP "${i}_LM_LP"
   if {[expr [llength $i] == 1]} {set name [lindex $i 0]; set txt $name} else {set name [lindex $i 0]; set txt [lindex $i 1]}
   set n "$i$suffixe"
   $type $n $n {no description}
   $LP Add_PM        $n
   $LP set_PM_active $n
   lappend rep $n
  }
 return $rep
}

