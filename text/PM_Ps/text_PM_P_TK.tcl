method PhysicalTextTK_horizontal get_width  {{PM {}}} {
 if {[winfo exists $this(primitives_handle).lab]} {return [winfo width  $this(primitives_handle)]} else {return -1}}
#___________________________________________________________________________________________________________________________________________
method PhysicalTextTK_horizontal get_height {{PM {}}} {
 if {[winfo exists $this(primitives_handle).lab]} {return [winfo height $this(primitives_handle)]} else {return -1}}

#___________________________________________________________________________________________________________________________________________
method PhysicalTextTK_horizontal get_or_create_prims {root} {
 set this(lab) "$root.tk_${objName}_label"
 if {[winfo exists $this(lab)]} {} else {
   label $this(lab) -text [this get_text]
   this Add_MetaData PRIM_STYLE_CLASS [list $this(lab) "PARAM RESULT OUT text TEXT"]
  }
 this set_root_for_daughters $root

 return [this set_prim_handle $this(lab)]
}

#___________________________________________________________________________________________________________________________________________
method PhysicalTextTK_horizontal set_text {t} {
 if {[winfo exists "$this(lab)"]} {
  $this(lab) configure -text $t}
}

