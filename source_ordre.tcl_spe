if {[string equal [info proc Comet_files_root] ""]} {
  set comet_files_root ""
  proc Comet_files_root {{d {}}} {
   global comet_files_root;
   if {[string length $d] == 0} {
     return $comet_files_root
    } else {return [set comet_files_root $d]}
  }
 }
 
